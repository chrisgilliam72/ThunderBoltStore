
@{
    ViewData["Title"] = "Orders";
}
@model ThunderBoltStore.ViewModels.OrdersList

<div class="container">
    <br />
    <div class="row">
        <div class="col">
            <div class="text-center">
                <h1 class="display-5">Orders</h1>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col">
            @{await Html.RenderPartialAsync("/Views/Orders/_OrdersTable.cshtml", @Model);}
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript">
        $(document).on('click', "[id*='btnShip']", function (e) {
            var lastChar = this.id[this.id.length - 1];
            $('.modal-backdrop').remove();
        })

        $(document).on('click', "[id*='btnCancel']", function (e) {
            var lastChar = this.id[this.id.length - 1];
            $('.modal-backdrop').remove();
        })
    </script>
}
